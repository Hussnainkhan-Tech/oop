#include<iostream>
using namespace std;
class node{
    public:
    int data;
    node*next;
    node*prev;

        node(int val){
            data=val;
            next=NULL;
            prev=NULL;
        }
};

class D_list{
    private:
    node* head;
    node* tail;
        public:
        D_list(){
            head=tail=NULL;
        }
        void push_front(int val){
        node* newNode=new node(val);
        if(head==NULL){
            head=tail=newNode;
        }
        else{
            newNode->next=head;
            head->prev=newNode;
            head=newNode;

        }

}
void show(){
    node*temp=head;
    while(temp!=NULL){
        cout<<temp->data<<"->";
        temp=temp->next;
    }
    cout<<"NULL"<<endl;
}
};
 int main(){
    D_list s;
    s.push_front(4);
    s.push_front(3);
    s.push_front(2);
    s.push_front(1);
    s.show();

 }
